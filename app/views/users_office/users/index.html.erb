<h1>Listagem de Usuários</h1>

<hr>
 <%= notice %>  | <%= link_to 'Novo', new_users_office_user_path %>
<hr>

<table class="table table-hover">
  <thead> 
     <tr>
      <th> # </th>
      <th> Nome </th>
      <th> Email </th>
      <th> Criado em : </th>
      <th> Atualizado em : </th>
      <th> Açoes </th>
     </tr>
  </thead>
  <% @users.each do |user|%>
  <tbody> 
     <tr>
      <th> <%= user.id %> </th>
      <th> <%= user.name %>  </th>
      <th> <%= user.email %>  </th>
      <th> <%= user.created_at %> </th>
      <th> <%= user.updated_at %>  </th>
      <th> 
        <%= link_to 'Voltar', users_office_welcome_index_path %> | 
        <%= link_to 'Mostrar', users_office_user_path(user)%> | 
        <%= link_to 'Editar',  edit_users_office_user_path(user)%> | 
        <%= link_to 'Deletar', users_office_user_path(user), method: :delete, data:{ confirm: 'Tem Certeza'}%> | 
      </th>
     </tr>
  </tbody>
  <% end %>
</table>