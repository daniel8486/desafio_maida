<% if @user.errors.any? %>
   <% @user.errors.full_messages.each do |message| %>
        <%= message %> 
  <% end %>
<% end %>

<hr>
<h3> <%= action_message %></h3> 
<hr>
   
 <%= form_with(model:[:users_office,@user],local: true) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-6">
       <%= form.label :name %>
       <%= form.text_field :name, placeholder:"Email do usuário", class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :email %>
      <%= form.text_field :email, placeholder:"Email do usuário", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder:"Senha", class: 'form-control' %>
  </div>
  <div class="form-group">
     <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation , placeholder:"Confirmação da senha", class: 'form-control'  %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :picture %><br>
      <%= form.file_field :picture , class: 'form-control'%>
    </div>
  </div>
  
  <%= form.submit "Salvar", class: 'btn btn-primary' %>
<% end %>                          