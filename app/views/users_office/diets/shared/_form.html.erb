<% if @diet.errors.any? %>
   <% @diet.errors.full_messages.each do |message| %>
        <%= message %> 
  <% end %>
<% end %>

<hr>
<h3> <%= action_message %></h3> 
<hr>
                   
<%= form_with(model:[:users_office,@diet],local: true) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-6">
         <%= form.label :date_initial %>
           <%= form.date_field :date_initial, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :date_final%>
           <%= form.date_field :date_final, class: 'form-control'%>
    </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-3">
     <%= form.label :weight %>
      <%= form.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group col-md-3">
    <%= form.label :height %>
  <%= form.text_field :height, class: 'form-control' %>
  </div>
    <div class="form-group col-md-3">
      <%= form.label :ideal_weight %>
            <%= form.text_field :ideal_weight , class: 'form-control'%>
    </div>
    <div class="form-group col-md-3">
    <%= form.label :schedule %>
    <%= form.text_field :schedule , class: 'form-control'%>
    </div>
    <div class="form-group col-md-12">
             <%= form.label :description %>
            <%= form.rich_text_area :description , class: 'form-control' %>
    </div>

    <div class="form-group col-md-5">
      <%= form.label :usuario %>
      <%= form.select("user_id", @select_user,{ include_blank: 'Selecione ... '}, class: 'form-control' )  %>  
    </div>

     <div class="form-group col-md-5">
         <%= form.label :refeicao %>
         <%= form.select("meal_id", @select_meal,{ include_blank: 'Selecione ... '}, class: 'form-control' )  %>
    </div>

  </div>
  <%= form.submit "Salvar", class: 'btn btn-primary' %>
   
 <% end %>                            